{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema.json#",
  "title": "Context Extension",
  "type": "object",
  "description": "STAC search metadata",
  "allOf": [
    {
      "$ref": "#/definitions/context"
    }
  ],
  "definitions": {
    "context": {
      "type": "object",
      "required": [
        "context"
      ],
      "properties": {
        "context": {
          "type": "object",
          "required": [
            "returned"
          ],
          "properties": {
            "limit": {
              "type": ["integer", "null"],
              "minimum": 0
            },
            "matched": {
              "type": "integer",
              "minimum": 0
            },
            "returned": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    }
  }
}
