{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema.json#",
  "title": "EO Extension",
  "description": "STAC EO Extension to a STAC Item.",
  "allOf": [
    {
      "$ref": "../../../item-spec/json-schema/item.json#/definitions/core"
    },
    {
      "$ref": "#/definitions/eo"
    }
  ],
  "definitions": {
    "eo": {
      "type": "object",
      "required": [
        "properties"
      ],
      "properties": {
        "properties": {
          "type": "object",
          "required": [
            "eo:gsd",
            "eo:bands"
          ],
          "properties": {
            "eo:gsd": {
              "title": "Ground Sample Distance",
              "type": "number"
            },
            "eo:bands": {
              "title": "Bands",
              "type": "array",
              "items": {
                "properties": {
                  "name": {
                    "title": "Name of the band",
                    "type": "string"
                  },
                  "common_name": {
                    "title": "Common Name of the band",
                    "type": "string"
                  },
                  "gsd": {
                    "title": "Ground Sample Distance",
                    "type": "number"
                  },
                  "accuracy": {
                    "title": "Accuracy",
                    "type": "number"
                  },
                  "center_wavelength": {
                    "title": "Center Wavelength",
                    "type": "number"
                  },
                  "full_width_half_max": {
                    "title": "Full Width Half Max (FWHM)",
                    "type": "number"
                  }
                }
              }
            },
            "eo:epsg": {
              "title": "EPSG code",
              "type": [
                "integer",
                "null"
              ]
            },
            "eo:cloud_cover": {
              "title": "Cloud Cover",
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        }
      }
    }
  }
}